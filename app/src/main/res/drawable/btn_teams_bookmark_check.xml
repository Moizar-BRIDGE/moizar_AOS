<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Transparent Rectangle -->
    <item
        android:width="350dp"
        android:height="113dp">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="#FFFFFF" />
        </shape>
    </item>

    <!-- Left Half-Circle -->
    <item
        android:bottom="15dp"
        android:left="-100dp"
        android:right="345dp"
        android:top="15dp">
        <shape android:shape="rectangle">
            <solid android:color="#2500F7" />
            <corners android:radius="15dp" />
        </shape>
    </item>

    <!-- Right Half-Circle -->
    <item
        android:bottom="15dp"
        android:left="345dp"
        android:right="-100dp"
        android:top="15dp">
        <shape android:shape="rectangle">
            <solid android:color="#2500F7" />
            <corners android:radius="15dp" />
        </shape>
    </item>

</layer-list>