<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">

        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle"
            >
            <corners android:radius="30dp"/>
            <!-- 테두리 내부 색상 설정 -->
            <solid android:color="#330063FA" />
            <!-- 테두리 내부 여백 설정 -->
            <padding
                android:bottom="1dp"
                android:right="1dp"
                android:left="1dp"
                android:top="1dp"/>

            <!-- 테두리 설정: 두께, 색상 -->
            <stroke
                android:width="2dp"
                android:color="@color/Step1_color" />

        </shape>
    </item>
    <item android:state_selected="false">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle"
            >
            <corners android:radius="30dp"/>
            <!-- 테두리 내부 색상 설정 -->
            <solid android:color="@color/btn_color" />
            <!-- 테두리 내부 여백 설정 -->
            <padding
                android:bottom="1dp"
                android:right="1dp"
                android:left="1dp"
                android:top="1dp"/>

            <!-- 테두리 설정: 두께, 색상 -->
            <stroke
                android:width="2dp"
                android:color="@color/grey_color" />

        </shape>
    </item>

</selector>