<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile_interested_design">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:transitionName="imageTransition5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/ellipse_68"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/solid_view" />

        <TextView
            android:id="@+id/madetext"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/notosans_bold"
            android:text="자신만의 프로필을 만들어보세요"
            android:textColor="@color/black"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/step_2"
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="110dp"
            android:fontFamily="@font/notosans_medium"
            android:text="Step 3"
            android:textColor="@color/Step1_color"
            android:textSize="23sp" />
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroup"
            android:layout_width="match_parent"
            android:layout_marginTop="170dp"
            android:paddingLeft="10dp"
            android:layout_height="90dp">
        </com.google.android.material.chip.ChipGroup>
        <ImageView
            android:id="@+id/design_view"
            android:layout_width="335dp"
            android:layout_height="390dp"
            android:layout_marginTop="100dp"
            android:transitionName="imageTransition"
            android:elevation="3dp"
            android:layout_gravity="center"
            android:background="@drawable/step3_chip"
            android:fontFamily="@font/notosans_medium"
            android:gravity="center"
            android:textSize="20sp" />

        <TextView
            android:transitionName="imageTransition6"
            android:id="@+id/design_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="3dp"
            android:layout_gravity="center|left"
            android:layout_marginBottom="60dp"
            android:layout_marginStart="60dp"
            android:fontFamily="@font/notosans_medium"
            android:gravity="center"
            android:text="디자인"
            android:textColor="#FF0063FB"
            android:textSize="25sp"/>
        <Button
            android:id="@+id/completebutton"
            android:layout_width="120dp"
            android:layout_height="44dp"
            android:layout_marginTop="600dp"
            android:layout_gravity="center_horizontal"
            android:transitionName="imageTransition4"
            android:background="@drawable/solid_button"
            app:backgroundTint="#FF0063FB"
            android:text="완료"
            />
        <ScrollView
            android:id="@+id/scrollview1"
            android:layout_width="270dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:scrollbars="none"
            android:layout_marginTop="70dp"
            android:fillViewport="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroup1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/disignchip_ux"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UI/UX 디자인"
                        android:textAppearance="@style/chipTextAppearance"
                        android:textColor="@color/Step1_color"
                        app:chipBackgroundColor="@color/white"
                        app:chipStrokeColor="@color/Step1_color"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/disignchip_graphic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:text="그래픽 디자인"
                        android:textAppearance="@style/chipTextAppearance"
                        android:textColor="@color/Step1_color"
                        app:chipBackgroundColor="@color/white"
                        app:chipStrokeColor="@color/Step1_color"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/disignchip_character"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="캐릭터 디자인"
                        android:textAppearance="@style/chipTextAppearance"
                        android:textColor="@color/Step1_color"
                        app:chipBackgroundColor="@color/white"
                        app:chipStrokeColor="@color/Step1_color"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/disignchip_illustration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:text="일러스트 디자인"
                        android:textAppearance="@style/chipTextAppearance"
                        android:textColor="@color/Step1_color"
                        app:chipBackgroundColor="@color/white"
                        app:chipStrokeColor="@color/Step1_color"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/disignchip_BI"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BI/BX 디자인"
                        android:textAppearance="@style/chipTextAppearance"
                        android:textColor="@color/Step1_color"
                        app:chipBackgroundColor="@color/white"
                        app:chipStrokeColor="@color/Step1_color"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/disignchip_mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:text="모바일 디자인"
                        android:textAppearance="@style/chipTextAppearance"
                        android:textColor="@color/Step1_color"
                        app:chipBackgroundColor="@color/white"
                        app:chipStrokeColor="@color/Step1_color"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/disignchip_video"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="영상 디자인"
                        android:textAppearance="@style/chipTextAppearance"
                        android:textColor="@color/Step1_color"
                        app:chipBackgroundColor="@color/white"
                        app:chipStrokeColor="@color/Step1_color"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/disignchip_adver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="60dp"
                        android:text="광고 디자인"
                        android:textAppearance="@style/chipTextAppearance"
                        android:textColor="@color/Step1_color"
                        app:chipBackgroundColor="@color/white"
                        app:chipStrokeColor="@color/Step1_color"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/disignchip_product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="제품 디자인"
                        android:textAppearance="@style/chipTextAppearance"
                        android:textColor="@color/Step1_color"
                        app:chipBackgroundColor="@color/white"
                        app:chipStrokeColor="@color/Step1_color"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/disignchip_fashion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="60dp"
                        android:text="패션 디자인"
                        android:textAppearance="@style/chipTextAppearance"
                        android:textColor="@color/Step1_color"
                        app:chipBackgroundColor="@color/white"
                        app:chipStrokeColor="@color/Step1_color"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/disignchip_3D"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3D 디자인"
                        android:textAppearance="@style/chipTextAppearance"
                        android:textColor="@color/Step1_color"
                        app:chipBackgroundColor="@color/white"
                        app:chipStrokeColor="@color/Step1_color"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/disignchip_web"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="80dp"
                        android:text="웹 디자인"
                        android:textAppearance="@style/chipTextAppearance"
                        android:textColor="@color/Step1_color"
                        app:chipBackgroundColor="@color/white"
                        app:chipStrokeColor="@color/Step1_color"
                        app:chipStrokeWidth="1dp" />

                </com.google.android.material.chip.ChipGroup>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>



</androidx.constraintlayout.widget.ConstraintLayout>