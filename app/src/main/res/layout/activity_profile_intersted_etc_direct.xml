<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile_interested_etc_direct">

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:transitionName="imageTransition5">

                <View
                    android:id="@+id/ellipse_68"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/solid_view" />

                <TextView
                    android:id="@+id/madetext"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/notosans_bold"
                    android:text="자신만의 프로필을 만들어보세요"
                    android:textColor="@color/black"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/step_2"
                    android:layout_width="78dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="110dp"
                    android:fontFamily="@font/notosans_medium"
                    android:text="Step 3"
                    android:textColor="@color/Step1_color"
                    android:textSize="23sp" />
            </FrameLayout>


            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroup"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/frameLayout">


            </com.google.android.material.chip.ChipGroup>

            <FrameLayout
                android:id="@+id/frameLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chipGroup">

                <ImageView
                    android:id="@+id/marketing_view"
                    android:layout_width="335dp"
                    android:layout_height="390dp"
                    android:layout_marginStart="40dp"
                    android:background="@drawable/step3_chip"
                    android:elevation="3dp"
                    android:fontFamily="@font/notosans_medium"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:transitionName="imageTransition3" />

                <TextView
                    android:id="@+id/marketing_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:elevation="3dp"
                    android:fontFamily="@font/notosans_medium"
                    android:gravity="center"
                    android:text="직접 추가하기"
                    android:textColor="#FF0063FB"
                    android:textSize="25sp"
                    android:transitionName="imageTransition8" />

                <Button
                    android:id="@+id/completebutton"
                    android:layout_width="120dp"
                    android:layout_height="44dp"
                    android:layout_marginStart="145dp"
                    android:layout_marginTop="330dp"
                    android:background="@drawable/solid_button"
                    android:text="완료"
                    android:transitionName="imageTransition4"
                    app:backgroundTint="#FF0063FB" />

                <EditText
                    android:id="@+id/direc_edit"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="55dp"
                    android:backgroundTint="#FF0063FB"
                    android:fontFamily="@font/notosans_regular"
                    android:hint="내용을 입력하세요."
                    android:textColorHint="@color/edit_color"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/edit_num"
                    android:layout_width="40dp"
                    android:layout_height="21dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="103dp"
                    android:layout_marginTop="90dp"
                    android:gravity="center_horizontal|top"
                    android:text="0/10자"
                    android:textSize="12sp" />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>