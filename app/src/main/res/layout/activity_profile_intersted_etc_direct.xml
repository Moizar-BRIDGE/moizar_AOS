<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile_interested_etc_direct">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:id="@+id/ellipse_68"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/solid_view" />

            <TextView
                android:id="@+id/madetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:includeFontPadding="false"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/notosans_bold"
                android:text="자신만의 프로필을\n만들어보세요"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/step_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="110dp"
                android:includeFontPadding="false"
                android:fontFamily="@font/notosans_medium"
                android:text="Step 3"
                android:textColor="@color/Step1_color"
                android:textSize="23sp" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroup"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="170dp"
                android:paddingLeft="10dp"></com.google.android.material.chip.ChipGroup>

            <ImageView
                android:id="@+id/marketing_view"
                android:layout_width="335dp"
                android:layout_height="390dp"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"
                android:background="@drawable/step3_chip"
                android:elevation="3dp"
                android:fontFamily="@font/notosans_medium"
                android:gravity="center"
                android:textSize="20sp"
                android:transitionName="imageTransition3" />

            <TextView
                android:id="@+id/marketing_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginStart="60dp"
                android:includeFontPadding="false"
                android:layout_marginBottom="60dp"
                android:elevation="3dp"
                android:fontFamily="@font/notosans_medium"
                android:gravity="center"
                android:text="직접 추가하기"
                android:textColor="#FF0063FB"
                android:textSize="25sp" />

            <Button
                android:id="@+id/completebutton"
                android:layout_width="120dp"
                android:layout_height="44dp"
                android:layout_marginTop="600dp"
                android:layout_marginStart="220dp"
                android:background="@drawable/solid_button"
                app:backgroundTint="#FF0063FB"
                android:text="추가"
                />
            <Button
                android:id="@+id/dir_before_btn"
                android:layout_width="120dp"
                android:layout_height="44dp"
                android:layout_marginTop="600dp"
                android:layout_marginStart="70dp"
                android:background="@drawable/solid_button"
                app:backgroundTint="#FF0063FB"
                android:text="완료"
                android:textSize="12sp"
                />

            <EditText
                android:id="@+id/direc_edit"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="160dp"
                android:backgroundTint="#FF0063FB"
                android:fontFamily="@font/notosans_regular"
                android:hint="내용을 입력하세요."
                android:maxLength="10"
                android:textColorHint="@color/edit_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/edit_num"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_gravity="center"
                android:layout_marginLeft="103dp"
                android:includeFontPadding="false"
                android:layout_marginTop="195dp"
                android:gravity="center_horizontal|top"
                android:text="0/10자"
                android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="680dp" />
        </FrameLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>