<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile_interested_marketing">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/ellipse_68"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/solid_view" />

        <TextView
            android:id="@+id/madetext"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/notosans_bold"
            android:text="자신만의 프로필을 만들어보세요"
            android:textColor="@color/black"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/step_4"
            android:layout_width="78dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="110dp"
            android:fontFamily="@font/notosans_medium"
            android:text="Step 4"
            android:textColor="@color/Step1_color"
            android:textSize="23sp" />
        <TextView
            android:id="@+id/myappeal_text"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="170dp"
            android:fontFamily="@font/notosans_medium"
            android:gravity="center"
            android:text="나를 어필할 수 있는
            간단한 자기소개를 해주세요"
            android:textColor="@color/Step1_color"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/myappeal_edit"
            android:layout_width="290dp"
            android:layout_height="254dp"
            android:layout_gravity="center"
            android:layout_marginTop="65dp"
            android:gravity="left"
            android:paddingLeft="5dp"
            android:maxLength="100"
            android:background="@drawable/square_border"
            android:fontFamily="@font/notosans_regular"
            android:hint="자기 소개를 적어주세요."
            android:textColorHint="@color/edit_color"/>

        <TextView
            android:id="@+id/edit_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="205dp"
            android:gravity="center_horizontal|top"
            android:text="0/100자"
            android:textSize="12sp" />
        <Button
            android:id="@+id/step_4_before"
            android:layout_width="120dp"
            android:layout_height="44dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="650dp"
            android:background="@drawable/solid_button"
            android:text="이전"
            android:textColor="@color/black"
            app:backgroundTint="#FFEAEAEA" />

        <Button
            android:id="@+id/step_4_next"
            android:layout_width="120dp"
            android:layout_height="44dp"
            android:layout_gravity="right"
            android:layout_marginRight="55dp"
            android:layout_marginTop="650dp"
            android:background="@drawable/solid_button"
            android:text="완료"
            app:backgroundTint="@null" />
        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="680dp" />
    </FrameLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>