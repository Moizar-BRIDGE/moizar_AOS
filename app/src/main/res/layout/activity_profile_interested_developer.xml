<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile_interested_developer">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:transitionName="imageTransition5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/ellipse_68"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/solid_view" />

        <TextView
            android:id="@+id/madetext"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/notosans_bold"
            android:text="자신만의 프로필을 만들어보세요"
            android:textColor="@color/black"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/step_2"
            android:layout_width="78dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="110dp"
            android:fontFamily="@font/notosans_medium"
            android:text="Step 3"
            android:textColor="@color/Step1_color"
            android:textSize="23sp" />
    </FrameLayout>



    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroup"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout">


    </com.google.android.material.chip.ChipGroup>
    <FrameLayout
        android:id="@+id/frameLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chipGroup">

        <ImageView
            android:id="@+id/developer_view"
            android:layout_width="335dp"
            android:layout_height="390dp"
            android:transitionName="imageTransition2"
            android:elevation="3dp"
            android:layout_marginStart="40dp"
            android:background="@drawable/step3_chip"
            android:fontFamily="@font/notosans_medium"
            android:gravity="center"
            android:textSize="20sp" />

        <TextView
            android:transitionName="imageTransition7"
            android:id="@+id/developer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="3dp"
            android:layout_marginStart="60dp"
            android:fontFamily="@font/notosans_medium"
            android:gravity="center"
            android:text="개발자"
            android:textColor="#FF0063FB"
            android:textSize="25sp"/>
        <Button
            android:id="@+id/completebutton"
            android:layout_width="120dp"
            android:layout_height="44dp"
            android:layout_marginTop="330dp"
            android:layout_marginStart="145dp"
            android:transitionName="imageTransition4"
            android:background="@drawable/solid_button"
            app:backgroundTint="#FF0063FB"
            android:text="완료"
            />
        <ScrollView
            android:id="@+id/scrollview1"
            android:layout_width="270dp"
            android:layout_height="250dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="50dp"
            android:scrollbars="none"
            android:fillViewport="true"
            app:layout_constraintTop_toBottomOf="@+id/chipGroup"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroup1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/developer_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="데이터 엔지니어"
                        android:textAppearance="@style/chipTextAppearance"
                        android:textColor="@color/Step1_color"
                        app:chipBackgroundColor="@color/white"
                        app:chipStrokeColor="@color/Step1_color"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/developer_soft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginStart="15dp"
                        android:text="소프트웨어"
                        android:textAppearance="@style/chipTextAppearance"
                        android:textColor="@color/Step1_color"
                        app:chipBackgroundColor="@color/white"
                        app:chipStrokeColor="@color/Step1_color"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/developer_front"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="프론트엔드"
                        android:textAppearance="@style/chipTextAppearance"
                        android:textColor="@color/Step1_color"
                        app:chipBackgroundColor="@color/white"
                        app:chipStrokeColor="@color/Step1_color"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/developer_system"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="45dp"
                        android:text="시스템관리"
                        android:textAppearance="@style/chipTextAppearance"
                        android:textColor="@color/Step1_color"
                        app:chipBackgroundColor="@color/white"
                        app:chipStrokeColor="@color/Step1_color"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/developer_java"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="자바 개발자"
                        android:textAppearance="@style/chipTextAppearance"
                        android:textColor="@color/Step1_color"
                        app:chipBackgroundColor="@color/white"
                        app:chipStrokeColor="@color/Step1_color"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/developer_server"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:text="서버 개발자"
                        android:textAppearance="@style/chipTextAppearance"
                        android:textColor="@color/Step1_color"
                        app:chipBackgroundColor="@color/white"
                        app:chipStrokeColor="@color/Step1_color"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/developer_android"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="안드로이드"
                        android:textAppearance="@style/chipTextAppearance"
                        android:textColor="@color/Step1_color"
                        app:chipBackgroundColor="@color/white"
                        app:chipStrokeColor="@color/Step1_color"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/developer_ios"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="45dp"
                        android:text="IOS 개발자"
                        android:textAppearance="@style/chipTextAppearance"
                        android:textColor="@color/Step1_color"
                        app:chipBackgroundColor="@color/white"
                        app:chipStrokeColor="@color/Step1_color"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/developer_python"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="파이썬 개발자"
                        android:textAppearance="@style/chipTextAppearance"
                        android:textColor="@color/Step1_color"
                        app:chipBackgroundColor="@color/white"
                        app:chipStrokeColor="@color/Step1_color"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/developer_devops"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="42dp"
                        android:text="DevOps"
                        android:textAppearance="@style/chipTextAppearance"
                        android:textColor="@color/Step1_color"
                        app:chipBackgroundColor="@color/white"
                        app:chipStrokeColor="@color/Step1_color"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/developer_node_js"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Node.js"
                        android:textAppearance="@style/chipTextAppearance"
                        android:textColor="@color/Step1_color"
                        app:chipBackgroundColor="@color/white"
                        app:chipStrokeColor="@color/Step1_color"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/developer_network"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="74dp"
                        android:text="네트워크"
                        android:textAppearance="@style/chipTextAppearance"
                        android:textColor="@color/Step1_color"
                        app:chipBackgroundColor="@color/white"
                        app:chipStrokeColor="@color/Step1_color"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/developer_c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="C언어 개발자"
                        android:textAppearance="@style/chipTextAppearance"
                        android:textColor="@color/Step1_color"
                        app:chipBackgroundColor="@color/white"
                        app:chipStrokeColor="@color/Step1_color"
                        app:chipStrokeWidth="1dp" />
                    <com.google.android.material.chip.Chip
                        android:id="@+id/developer_cflus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="C++언어 개발자"
                        android:layout_marginStart="4dp"
                        android:textAppearance="@style/chipTextAppearance"
                        android:textColor="@color/Step1_color"
                        app:chipBackgroundColor="@color/white"
                        app:chipStrokeColor="@color/Step1_color"
                        app:chipStrokeWidth="1dp" />
                    <com.google.android.material.chip.Chip
                        android:id="@+id/developer_machine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="머신러닝"
                        android:textAppearance="@style/chipTextAppearance"
                        android:textColor="@color/Step1_color"
                        app:chipBackgroundColor="@color/white"
                        app:chipStrokeColor="@color/Step1_color"
                        app:chipStrokeWidth="1dp" />
                    <com.google.android.material.chip.Chip
                        android:id="@+id/developer_web"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="72dp"
                        android:text="웹 개발자"
                        android:textAppearance="@style/chipTextAppearance"
                        android:textColor="@color/Step1_color"
                        app:chipBackgroundColor="@color/white"
                        app:chipStrokeColor="@color/Step1_color"
                        app:chipStrokeWidth="1dp" />

                </com.google.android.material.chip.ChipGroup>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>